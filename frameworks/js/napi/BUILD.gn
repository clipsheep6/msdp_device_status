  ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "c_utils:utils"
  ]

  relative_install_dir = "module"
  subsystem_name = "msdp"
  part_name = "${motion_part_name}"
}