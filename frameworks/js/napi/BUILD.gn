    "//foundation/distributedschedule/samgr/adapter/interfaces/innerkits/include",
    "//commonlibrary/c_utils/base/include",
  ]
}

ohos_shared_library("motion") {
  sources = [
    "${motion_frameworks_path}/js/napi/src/motion_event.cpp",
    "${motion_frameworks_path}/js/napi/src/motion_napi.cpp"
  ]

  configs = [
    "${motion_utils_path}:motion_utils_config",
    ":motionnapi_private_config",
  ]

  deps = [
    "//base/msdp/device_status/interfaces/innerkits:motion_client",
    "//base/msdp/device_status/services:motion_service",
